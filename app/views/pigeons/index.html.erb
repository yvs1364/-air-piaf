  <h1> Index </h1>

  <!-- <div class="container"> -->
    <div class="row">

    <div class="col-12 col-lg-8">
      <div class="cards">
      <% @pigeons.each do |pigeon| %>
      <div class="card-category" data-lat="<%= pigeon.latitude %>" data-lng="<%= pigeon.longitude %>">
        <h2 class="name-pigeon-index"><%=link_to pigeon.name, pigeon_path(pigeon) %></h2>
        <div class="card-trip-infos">
          <div>
            <p> Breed : <%= pigeon.breed %></p>
            <p> Speed : <%= pigeon.km_per_hour %></p>
            <p> Address : <%= pigeon.address %></p>
          </div>
          <h2 class="card-trip-pricing"><%= pigeon.price_per_km %> ct/km</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
        <% end %>
    </div>
      </div>
      <div class="col-12 col-lg-4">
    <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
      </div>
  </div>

