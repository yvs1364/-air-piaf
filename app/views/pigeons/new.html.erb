<div class="container">
  <div class="row">
      <div class="col-6">
        <div class="background-tyson">
        </div>
      </div>
  <!--   <div class="row justify-content-center"> -->
    <div class="col-md-6">
      <h1>Add a pigeon to your pigeon army</h1>

        <%= simple_form_for @pigeon do |f| %>
        <%= f.input :name %>
        <%= f.input :breed %>
        <%= f.input :km_per_hour %>
        <%= f.input :price_per_km %>
        <%= f.input :address, input_html: {id: "address"} %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<%= link_to "Back", dashboard_path, class: "btn btn-outline-dark mt-2" %>
</div>

