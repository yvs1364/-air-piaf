<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a pigeon to your pigeon army</h1>

      <%= simple_form_for @pigeon do |f| %>
        <%= f.input :name %>
        <%= f.input :breed %>
        <%= f.input :km_per_hour %>
        <%= f.input :price_per_km %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", pigeons_path, class: "btn btn-outline-dark mt-2" %>
