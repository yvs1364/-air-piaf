<div class="container">

  <h1><%= @pigeon.name %></h1>
  <%= link_to "Back", pigeons_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Characteristics</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th><%= @pigeon.breed %></th>
            <th><%= @pigeon.km_per_hour%> km/h </th>
            <th><%= @pigeon.price_per_km %> $/km</th>
          </thead>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
<%= simple_form_for [@pigeon, @journey] do |j| %>
        <%= j.input  :arrival_address, input_html: {id: "address"} %>
        <%= j.input :arrival_date %>
        <%= j.input :message%>
        <%= j.button :submit, class: 'btn btn-primary' %>
        <!-- dois afficher le total_price -->
      <% end %>
</div>

<%= link_to "Back", pigeons_path, class: "btn btn-outline-dark mt-2" %>
